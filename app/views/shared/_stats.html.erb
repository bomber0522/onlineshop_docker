<% @member ||= current_member %>
<div>
  <a class="user-following" href="<%= following_member_path(@member) %>">
    <strong id="following" class="stat">
      <%= @member.following.count %>
    </strong>
    following
  </a><br>
  <a class="user-followers" href="<%= followers_member_path(@member) %>">
    <strong id="followers" class="stat">
    <%= @member.followers.count %>
    </strong>
    followers
  </a>
</div>
