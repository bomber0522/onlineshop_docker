<% provide(:title, @article.title) %>
<div class="news-show-title"><%= @article.title %></div>
<% if current_member %>
  <div class="back-edit"><%= link_to "編集", [:edit, :admin, @article] %></div>
<% end %>
<table class="attr" border="1">
  <tr>
    <th class="article-name" width="100">タイトル</th>
    <td><%= @article.title %></td>
  </tr>
    <th class="pic-info">記事画像</th>
    <td>
      <% if @article.info_picture.attached? %>
        <%= image_tag @article.info_picture.variant(resize: "128x128") %>
      <% end %>
    </td>
  <tr>
    <th>本文</th>
    <td><%= @article.body %></td>
  </tr>
  <tr>
    <th class="start-date">掲載開始日時</th>
    <td><%= @article.released_at.strftime("%Y/%m/%d %H:%M") %></td>
  </tr>
  <tr>
    <th class="start-date">掲載終了日時</th>
    <td><%= @article.expired_at.try(:strftime, "%Y/%m/%d %H:%M") %></td>
  </tr>
  <tr>
    <th>会員限定</th>
    <td class="article-name"><%= @article.member_only? ? "○" : "－" %></td>
  </tr>
</table>
